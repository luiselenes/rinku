@page
@using rinku.Pages.Empleados
@model ActualizarModel

<h1>Modificar informacion de empleado </h1>
<div asp-validation-summary="All"></div>
<form method="POST">
  <div class="form-group">
   
 
  <div class="form-group">
    <label for="num_empleados">Numero Empleado</label>
    <input type="text" name="num_empleados" class="form-control"
         id="num_empleados" aria-describedby="" value="@Model.Detalles.num_empleados">
  </div>

  <div class="form-group">
    <label for="nombre">Nombre</label>
    <input type="text" name="nombre" class="form-control"
         id="nombre" aria-describedby="" value="@Model.Detalles.nombre">
  </div>

  <div class="form-group">
    <label for="appaterno">Apellido paterno</label>
    <input type="text" class="form-control"
        name="appaterno" id="appaterno" aria-describedby="" value="@Model.Detalles.appaterno">
  </div>

  <div class="form-group">
    <label for="apmaterno">Apellido materno</label>
    <input type="text" class="form-control"
        name="apmaterno" id="apmaterno" aria-describedby="" value="@Model.Detalles.apmaterno">
  </div>

 </div>
    <div class="form-group">
      <label for="rol">Rol</label>
      <select name="rol" class="form-control" id="rol" aria-describedby="" value="@Model.Detalles.rol">
        <option value="chofer">chofer</option>
        <option value="cargador" selected>cargador</option>
        <option value="auxiliar">auxiliar</option>
      </select>
    </div>
    <div class="form-group"></div>
    <select id="Activo" name="Activo" class="form-control" value="@Model.Detalles.activo">
        <option value="true">Activo</option>
        <option value="false">Inactivo</option>
    </select>
    </div>

  <a asp-page="./Index" class="btn btn-info">Regresar</a>
  <button type="submit" class="btn btn-primary">Actualizar</button>
  </div>
</form>